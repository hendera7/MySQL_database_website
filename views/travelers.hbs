<h2>Add a new Traveler</h2>

<form id="add_traveler" method="POST" action="/add_traveler">
    <label for="in-name">Name:</label>
    <input type="text" name="in-name" id="in-name">
    <label for="in-age">age:</label>
    <input type="text" name="in-age" id="in-age">
    <label for="in-phone_number">Phone Number:</label>
    <input type="text" name="in-phone_number" id="in-phone_number">
    <label for="in-email">Email:</label>
    <input type="text" name="in-email" id="in-email">
    <label for="in-passport_country">Passport Country:</label>
    <input type="text" name="in-passport_country" id="in-passport_country">
    <label for="in-vaccines_updated">Vaccinated:</label>
    <select name="in-vaccines_updated" id="in-vaccines_updated">
        <option value="">Select if Vaccinated</option>
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <label for="in-preferred_airline">Preferred Airline:</label>
    <input type="text" name="in-preferred_airline" id="in-preferred_airline">
    <input type="submit">
</form>

